<div class = "login">
		<H1 id = "title" >Log in to Trello</H1>
		<form id = "login_form" method="POST" action="/login">
			<p>Username:<br>
			<input type="text" name="username" placeholder="e.g username1" required></p>
			<p>Password:<br>
			<input type="password" name="password" required></p>
			<p><input type="checkbox" name=""> Remember Me</p>
			<a href = "/register" class = 'link'>Sign up!</a> </br>
			<a href = "/forgotpassword" class = 'link'> forgot password? </a>
			<input class="button" id="register_btn" type="submit" value="Log in">
		</form>
		
			
	</div>

